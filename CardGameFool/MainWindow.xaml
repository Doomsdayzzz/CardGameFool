<Window x:Class="CardGameFool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGameFool"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="pack://Application:,,,/Images/background/back1.jpg"/>
    </Window.Background>
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
        
    </Window.Resources>
    <Window.DataContext>
        <Binding RelativeSource="{RelativeSource Mode=Self}"></Binding>
    </Window.DataContext>
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                <Button Name="TrumpCard" Height="136" Width="89.2" 
                        Style="{StaticResource btn}"
                        Background="{Binding Path=ButtonTrump_card[0].Background}" Margin="10"/>
                <TextBlock Text="Козырь" 
                           Foreground="Bisque" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           FontSize="20"
                           />
            </StackPanel>
            <TextBlock Name="MainInfo" 
                       VerticalAlignment="Center" 
                       Width="800" 
                       FontSize="40" 
                       Foreground="Bisque" 
                       TextAlignment="Center"
                       Text="{Binding MainInformation}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="Card1" Height="160" Width="105" 
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[0].Background}" Margin="10"
                    Click="Card_OnClick"/>
             <Button Name="Card2" 
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[1].Background}" Height="160" Width="105" Margin="10"/>
            <Button Name="Card3" Height="160" Width="105" 
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[2].Background}" Margin="10"/>
            <Button Name="Card4" Height="160" Width="105" 
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[3].Background}" Margin="10"/>
            <Button Name="Card5" Height="160" Width="105"  
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[4].Background}" Margin="10"/>
            <Button Name="Card6" Height="160" Width="105"  
                    Style="{StaticResource btn}"
                    Background="{Binding Path=Player1_GameButtonsCards[5].Background}" Margin="10"/>
            </StackPanel>
        
    </Grid>
</Window>
